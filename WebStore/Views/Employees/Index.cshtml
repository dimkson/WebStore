@model IEnumerable<WebStore.Models.Employee>

<div class="container">
    <h3>Сотрудники</h3>
    <hr/>

    <p>
        <a asp-controller="Employees" asp-action="Create" class="btn btn-primary">Создать</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <td>#</td>
                <td>Имя</td>
                <td>Фамилия</td>
                <td>Действия</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var person in Model)
            {
            <tr>
                <td>@person.Id</td>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
                <td>
                    <a asp-controller="Employees" asp-action="Details" asp-route-id="@person.Id" class="btn btn-default">Детали</a>
                    <a asp-controller="Employees" asp-action="Edit" asp-route-id="@person.Id" class="btn btn-default">Редактировать</a>
                    <a asp-controller="Employees" asp-action="Delete" asp-route-id="@person.Id" class="btn btn-default">Удалить</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <hr/>
    <p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">На главную</a>
    </p>
</div>
